  %body
  .nav.navbar-default
  
  .container
    .navbar-header
      = link_to "|||RideMe!|||", root_path, class:"navbar-brand"
      %img{:height => "50", :src => asset_path("my_tweet.png"), :width => "100"}
      
    %ul.nav.navbar-nav
      - if user_signed_in?
        %li= link_to "Home", eventspage_path
        %li
        %li= link_to "Events", eventspage_path
        %li
        %li= link_to "My Itinerary", eventspage_path
        %li= link_to "My Profile", current_user
        %li
        %li= link_to "Logout", destroy_user_session_path, :method => :delete
        %br/
      - else
        %li= link_to "Sign Up", new_user_registration_path
        %li= link_to "Log In", new_user_session_path
  #main
    %p.notice= notice
    %p.alert= alert

    = yield

